<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org" ng-controller='mainController' ng-init="showContent = false">
  <head>
    <%include header_includes.ejs%>
  </head>
  <body>

    <div class="homepage">
      <!--nav bar start -------->
      <div class="container-fluid">
        <nav class="navbar navbar-default navbar-fixed-top">
          <div class="navbar-header">
            <!-- Logo -->
            <a href="/#/" class="logo">
              <!-- logo for regular state and mobile devices -->
              <span class="logo-lg"><b>Tattva</b> | <b> {{current_user.organization}} </span>
            </a>
            <button type="button" class="navbar-toggle" data-target=".navbar-responsive-collapse" data-toggle="collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div> <!-- end navbar-header -->

          <div class="navbar-collapse collapse navbar-responsive-collapse navbar-right">

            <ul class="nav navbar-nav">
              <li>
                <a href="#logListing" ng-click="selection='nginxLogStatistics'" class="home">
                  Home <i class="fa fa-home fa-fw"></i>
                </a>
              </li>
              <li>
                <a ng-click="aboutus()">
                  About us <i class="fa fa-book fa-fw"></i>
                </a>
              </li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                  Dashboard <i class="fa fa-dashboard"></i>
                </a>
                <ul class="dropdown-menu">
                  <li ng-repeat="value in config.dashboard">
                    <a href="#/{{value.name.split(' ').join('')}}" ng-click="setDashName(value.name);setTab(value.name);">
                      {{value.name}}
                    </a>
                  </li>
                </ul> <!-- end dropdown-menu -->
              </li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                  Settings <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <a ng-href="#serviceConfig">
                      Config Settings
                    </a>
                  </li>
                  <li>
                    <a ng-href="#defineData">
                      Define Data
                    </a>
                  </li>
                </ul> <!-- end dropdown-menu -->
              </li>
              <!-- <li >
                <a ng-href="#serviceConfig">
                  Settings <i class="fa fa-wrench"></i>
                </a>
              </li> -->
              <!-- User Account: style can be found in dropdown.less -->
              <li class="dropdown   user-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <img src="../stylesheets/img/user1-128x128.jpg" class="user-image" alt="User Image">
                  {{current_user.username}}
                </a>
                <ul class="dropdown-menu">
                  <!-- User image -->
                  <li class="user-header">
                    <img src="../stylesheets/img/user1-128x128.jpg" class="img-circle" alt="User Image">
                    <p>
                        {{current_user.username}}
                      <small>Member since Nov. 2012</small>
                    </p>
                  </li>
                  <!-- Menu Footer-->
                  <li class="user-footer">
                    <div class="pull-left">
                      <a href="#profile" class="btn btn-default btn-flat">Profile</a>
                    </div>
                    <div class="pull-right">
                      <a class="btn btn-default btn-flat" ng-click="logout()">Log out</a>
                    </div>
                  </li>
                </ul>
              </li>
            </ul> <!-- end navbar-right -->

          </div> <!-- end navbar-responsive-collapse -->
        </nav> <!-- end Nav -->
      </div> <!-- end container-fluid -->

    </div> <!-- end homepage -->

    <div ui-view  style="margin-top:50px">
    </div>

  <%include footer_includes.ejs%>
  </body>
</html>
